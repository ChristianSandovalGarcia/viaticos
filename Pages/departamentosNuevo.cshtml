@page
@model departamentosNuevo
@{
    ViewData["Title"] = "Departamentos";
}
<h2>Nuevo departamento</h2>

<div class="row">
    <div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
        <div class="form-group">
            <label asp-for="departamento.nombre" class="control-label"></label>  
            <input asp-for="departamento.nombre" class="form-control" />
            <span asp-validation-for="departamento.nombre" class="text-danger"></span>  
        </div>
        <div class="form-group">
            <label asp-for="departamento.activo" class="control-label"></label>  
            <input checked type="checkbox" asp-for="departamento.activo" disabled />
        </div>
        <div class="form-group">  
            <input type="submit" value="Create" class="btn btn-default" />  
        </div> 
    </form>
    </div>
</div>

<div>  
    <a asp-page="departamentos">Volver</a>  
</div>  